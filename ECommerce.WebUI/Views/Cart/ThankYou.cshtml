@model ECommerce.WebUI.Models.ThankYouViewModel

@{
    ViewData["Title"] = "Thank You!";
}

<!-- Thank You Page -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <!-- Success Icon -->
            <div class="mb-4">
                <div class="success-icon mx-auto mb-4">
                    <i class="bi bi-check-circle-fill text-success"></i>
                </div>
                
                <!-- Thank You Message -->
                <h1 class="display-4 fw-bold text-success mb-3">Thank You!</h1>
                <p class="lead text-muted mb-4">
                    Your order has been successfully placed and is being processed.
                </p>
            </div>

            <!-- Order Details Card -->
            <div class="card mb-5">
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="order-detail-item">
                                <i class="bi bi-receipt text-primary mb-2"></i>
                                <h6 class="fw-bold">Order Number</h6>
                                <p class="text-muted mb-0">@Model.OrderNumber</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="order-detail-item">
                                <i class="bi bi-truck text-primary mb-2"></i>
                                <h6 class="fw-bold">Estimated Delivery</h6>
                                <p class="text-muted mb-0">@Model.EstimatedDelivery</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="order-detail-item">
                                <i class="bi bi-envelope text-primary mb-2"></i>
                                <h6 class="fw-bold">Confirmation</h6>
                                <p class="text-muted mb-0">Email sent to you</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- What's Next Section -->
            <div class="card mb-5">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>What's Next?
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4 text-start">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="step-number">1</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Order Confirmation</h6>
                                    <p class="text-muted small mb-0">
                                        You'll receive an email confirmation with your order details shortly.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="step-number">2</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Order Processing</h6>
                                    <p class="text-muted small mb-0">
                                        We'll prepare your items and update you on the progress.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="step-number">3</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Shipping Notification</h6>
                                    <p class="text-muted small mb-0">
                                        You'll get tracking information once your order ships.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="step-number">4</div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Delivery</h6>
                                    <p class="text-muted small mb-0">
                                        Your order will be delivered to your specified address.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center gap-3 flex-wrap mb-5">
                <a asp-controller="Account" asp-action="Orders" class="btn btn-primary btn-lg">
                    <i class="bi bi-bag me-2"></i>View My Orders
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-house me-2"></i>Continue Shopping
                </a>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-headset me-2"></i>Contact Support
                </a>
            </div>

            <!-- Customer Service -->
            <div class="card bg-light">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Need Help?</h5>
                    <p class="text-muted mb-3">
                        Our customer service team is here to help with any questions about your order.
                    </p>
                    <div class="row g-3 text-start">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-telephone text-primary me-3"></i>
                                <div>
                                    <strong>Call Us</strong>
                                    <br><small class="text-muted">1-800-123-4567</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope text-primary me-3"></i>
                                <div>
                                    <strong>Email</strong>
                                    <br><small class="text-muted">support@example.com</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-chat-dots text-primary me-3"></i>
                                <div>
                                    <strong>Live Chat</strong>
                                    <br><small class="text-muted">Available 24/7</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Social Sharing -->
            <div class="mt-5">
                <h6 class="fw-bold mb-3">Share Your Experience</h6>
                <div class="d-flex justify-content-center gap-2">
                    <a href="#" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="#" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-whatsapp"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .success-icon {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, #28a745, #20c997);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
        }
        
        .success-icon i {
            font-size: 4rem;
            color: white;
        }
        
        .card {
            border: none;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border-radius: 15px;
        }
        
        .card-header {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-bottom: 1px solid #dee2e6;
            border-radius: 15px 15px 0 0 !important;
        }
        
        .order-detail-item {
            text-align: center;
            padding: 1rem;
        }
        
        .order-detail-item i {
            font-size: 2rem;
            display: block;
        }
        
        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.1rem;
        }
        
        .btn {
            border-radius: 25px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .btn-lg {
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }
        
        .btn-outline-primary:hover,
        .btn-outline-secondary:hover {
            transform: translateY(-2px);
        }
        
        .bg-light {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef) !important;
        }
        
        /* Animation for success icon */
        .success-icon {
            animation: bounceIn 1s ease-out;
        }
        
        @@keyframes bounceIn {
            0% {
                transform: scale(0.3);
                opacity: 0;
            }
            50% {
                transform: scale(1.05);
            }
            70% {
                transform: scale(0.9);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        /* Fade in animation for content */
        .card, .btn {
            animation: fadeInUp 0.6s ease-out;
            animation-fill-mode: both;
        }
        
        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Mobile Responsiveness */
        @@media (max-width: 768px) {
            .display-4 {
                font-size: 2.5rem;
            }
            
            .success-icon {
                width: 100px;
                height: 100px;
            }
            
            .success-icon i {
                font-size: 3rem;
            }
            
            .btn-lg {
                padding: 0.75rem 1.5rem;
                font-size: 1rem;
            }
            
            .d-flex.gap-3 {
                flex-direction: column;
                gap: 1rem !important;
            }
            
            .container {
                padding-left: 1rem;
                padding-right: 1rem;
            }
        }
        
        @@media (max-width: 576px) {
            .order-detail-item {
                margin-bottom: 2rem;
            }
            
            .step-number {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confetti effect (optional)
            if (typeof confetti !== 'undefined') {
                confetti({
                    particleCount: 100,
                    spread: 70,
                    origin: { y: 0.6 }
                });
            }
            
            // Auto-redirect after 30 seconds (optional)
            setTimeout(function() {
                const continueBtn = $('a[href*="Home"]');
                if (continueBtn.length) {
                    continueBtn.addClass('btn-outline-warning');
                    continueBtn.html('<i class="bi bi-clock me-2"></i>Continue Shopping (Auto-redirect in 10s)');
                    
                    setTimeout(function() {
                        window.location.href = continueBtn.attr('href');
                    }, 10000);
                }
            }, 20000);
        });
    </script>
}
