<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Store</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewData["MetaDescription"]" />
    @if (ViewData["CanonicalUrl"] != null)
    {
        <link rel="canonical" href="@ViewData["CanonicalUrl"]" />
    }
    
    <!-- Open Graph Tags -->
    <meta property="og:site_name" content="E-Commerce Store" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="@ViewData["MetaDescription"]" />
    @if (ViewData["CanonicalUrl"] != null)
    {
        <meta property="og:url" content="@ViewData["CanonicalUrl"]" />
    }
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Structured Data -->
    @if (ViewData["StructuredData"] != null)
    {
        <script type="application/ld+json">
            @Html.Raw(ViewData["StructuredData"])
        </script>
    }
    @RenderSection("Head", required: false)
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="site-header">
        <!-- Top Bar -->
        <div class="top-bar d-none d-lg-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="top-bar-left">
                            <span class="me-3">
                                <i class="bi bi-telephone me-1"></i>
                                +1 (555) 123-4567
                            </span>
                            <span>
                                <i class="bi bi-envelope me-1"></i>
                                contact@ecommerce-store.com
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="top-bar-right text-end">
                            <span class="me-3">Free shipping on orders over $99</span>
                            <div class="social-links d-inline-flex">
                                <a href="#" class="social-link me-2" title="Facebook">
                                    <i class="bi bi-facebook"></i>
                                </a>
                                <a href="#" class="social-link me-2" title="Twitter">
                                    <i class="bi bi-twitter"></i>
                                </a>
                                <a href="#" class="social-link me-2" title="Instagram">
                                    <i class="bi bi-instagram"></i>
                                </a>
                                <a href="#" class="social-link" title="LinkedIn">
                                    <i class="bi bi-linkedin"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light main-nav">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.avif" alt="E-Commerce Store" height="40" class="d-none d-sm-inline" />
                    <span class="brand-text">E-Commerce Store</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    <!-- Center Menu -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown">
                                Categories
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Catalog" asp-action="Index">All Products</a></li>
                                <li><hr class="dropdown-divider"></li>
                                @await Component.InvokeAsync("CategoryNavigation")
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Faq" asp-action="Index">FAQ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>

                    <!-- Right Menu -->
                    <div class="navbar-nav">
                        <!-- Search -->
                        <div class="nav-item search-box d-none d-lg-block">
                            <form class="d-flex" method="get" action="/search">
                                <div class="input-group">
                                    <input class="form-control search-input" type="search" name="q" placeholder="Search products..." />
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- User Account -->
                        <div class="nav-item dropdown">
                            @{
                                var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
                                var userName = Context.Session.GetString("UserName");
                                var userRole = Context.Session.GetString("UserRole");
                            }
                            
                            @if (isLoggedIn)
                            {
                                <!-- Logged In User -->
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-check-fill me-1"></i>
                                    <span class="d-none d-md-inline">@userName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header">
                                        <i class="bi bi-person-circle me-2"></i>Welcome, @userName!
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person me-2"></i>My Profile
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                                        <i class="bi bi-bag me-2"></i>My Orders
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Wishlist">
                                        <i class="bi bi-heart me-2"></i>Wishlist
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Addresses">
                                        <i class="bi bi-geo-alt me-2"></i>Addresses
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                                        <i class="bi bi-gear me-2"></i>Settings
                                    </a></li>
                                    @if (userRole == "Admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-primary" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-gear me-2"></i>Admin Panel
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <!-- Not Logged In -->
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    <span class="d-none d-md-inline">Account</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header">
                                        <i class="bi bi-info-circle me-2"></i>Guest User
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-person-plus me-2"></i>Create Account
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="dropdown-item-text text-muted small">
                                        <i class="bi bi-gift me-2"></i>Sign up for exclusive deals!
                                    </li>
                                </ul>
                            }
                        </div>

                        <!-- Cart -->
                        <div class="nav-item">
                            <a class="nav-link cart-link" href="/cart">
                                <i class="bi bi-bag"></i>
                                <span class="cart-count badge bg-danger">0</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <!-- Company Info -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h5 class="widget-title">E-Commerce Store</h5>
                            <p class="widget-text">
                                Your trusted online destination for quality products, excellent service, 
                                and unbeatable prices. Shop with confidence!
                            </p>
                            <div class="footer-contact">
                                <p><i class="bi bi-geo-alt me-2"></i>123 Business Street, City, State 12345</p>
                                <p><i class="bi bi-telephone me-2"></i>+1 (555) 123-4567</p>
                                <p><i class="bi bi-envelope me-2"></i>contact@ecommerce-store.com</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h6 class="widget-title">Quick Links</h6>
                            <ul class="footer-links">
                                <li><a href="/">Home</a></li>
                                <li><a asp-controller="Catalog" asp-action="Index">Products</a></li>
                                <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                                <li><a asp-controller="Faq" asp-action="Index">FAQ</a></li>
                                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Categories -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h6 class="widget-title">Categories</h6>
                            <ul class="footer-links">
                                <li><a href="/category/electronics">Electronics</a></li>
                                <li><a href="/category/clothing">Clothing</a></li>
                                <li><a href="/category/home-garden">Home & Garden</a></li>
                                <li><a href="/category/sports">Sports & Outdoors</a></li>
                                <li><a href="/category/books">Books</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Customer Service -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h6 class="widget-title">Customer Service</h6>
                            <ul class="footer-links">
                                <li><a href="/help/shipping">Shipping Info</a></li>
                                <li><a href="/help/returns">Returns</a></li>
                                <li><a href="/help/size-guide">Size Guide</a></li>
                                <li><a href="/help/track-order">Track Your Order</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Newsletter -->
                    <div class="col-lg-2 col-md-6 mb-4">
                        <div class="footer-widget">
                            <h6 class="widget-title">Stay Connected</h6>
                            <p class="widget-text small">Subscribe to get special offers and updates.</p>
                            <form class="newsletter-form" asp-controller="Home" asp-action="Newsletter" method="post">
                                @Html.AntiForgeryToken()
                                <div class="input-group input-group-sm">
                                    <input type="email" name="email" class="form-control" placeholder="Your email" required />
                                    <button class="btn btn-primary" type="submit">
                                        <i class="bi bi-arrow-right"></i>
                                    </button>
                                </div>
                            </form>
                            <div class="social-links mt-3">
                                <a href="#" class="social-link me-2"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="social-link me-2"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="social-link me-2"><i class="bi bi-instagram"></i></a>
                                <a href="#" class="social-link"><i class="bi bi-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="copyright mb-0">
                            &copy; @DateTime.Now.Year E-Commerce Store. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6">
                        <div class="payment-methods text-md-end">
                            <span class="me-2">We Accept:</span>
                            <img src="~/images/payments/visa.png" alt="Visa" height="24" class="me-1" />
                            <img src="~/images/payments/mastercard.png" alt="Mastercard" height="24" class="me-1" />
                            <img src="~/images/payments/paypal.png" alt="PayPal" height="24" class="me-1" />
                            <img src="~/images/payments/stripe.png" alt="Stripe" height="24" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button class="btn-back-to-top" id="backToTop" title="Back to Top">
        <i class="bi bi-arrow-up"></i>
    </button>

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="toast show" role="alert">
                <div class="toast-header bg-success text-white">
                    <i class="bi bi-check-circle me-2"></i>
                    <strong class="me-auto">Success</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="toast show" role="alert">
                <div class="toast-header bg-danger text-white">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong class="me-auto">Error</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["ErrorMessage"]
                </div>
            </div>
        }
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- User Session Data for JavaScript -->
    <script>
        // Global variables for user session state
        window.userSessionData = {
            isLoggedIn: @(isLoggedIn ? "true" : "false"),
            userId: '@(Context.Session.GetString("UserId") ?? "")',
            userName: '@(Context.Session.GetString("UserName") ?? "")',
            userRole: '@(Context.Session.GetString("UserRole") ?? "")'
        };
    </script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>