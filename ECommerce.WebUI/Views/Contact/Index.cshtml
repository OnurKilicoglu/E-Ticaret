@model ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
    ViewData["MetaDescription"] = "Get in touch with our team. We're here to help with any questions or concerns you may have.";
}

<div class="container py-5">
    <!-- Contact Header -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">Contact Us</h1>
            <p class="lead text-muted">
                We'd love to hear from you. Send us a message and we'll respond as soon as possible.
            </p>
        </div>
    </div>

    <div class="row g-5">
        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-envelope me-2"></i>Send us a Message
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ContactForm.Name" class="form-label">Full Name</label>
                                <input asp-for="ContactForm.Name" class="form-control" placeholder="Your full name" />
                                <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ContactForm.Email" class="form-label">Email Address</label>
                                <input asp-for="ContactForm.Email" class="form-control" placeholder="your.email@example.com" />
                                <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label asp-for="ContactForm.PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="ContactForm.PhoneNumber" class="form-control" placeholder="(555) 123-4567" />
                                <span asp-validation-for="ContactForm.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ContactForm.Subject" class="form-label">Subject</label>
                                <input asp-for="ContactForm.Subject" class="form-control" placeholder="Message subject" />
                                <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label asp-for="ContactForm.Message" class="form-label">Message</label>
                            <textarea asp-for="ContactForm.Message" class="form-control" rows="6" 
                                      placeholder="Tell us how we can help you..."></textarea>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-lg-4">
            <!-- Contact Details -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Contact Information
                    </h4>
                </div>
                <div class="card-body">
                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center">
                            <div class="contact-icon me-3">
                                <i class="bi bi-geo-alt-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Address</h6>
                                <p class="text-muted mb-0">
                                    123 Business Street<br>
                                    City, State 12345
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center">
                            <div class="contact-icon me-3">
                                <i class="bi bi-telephone-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Phone</h6>
                                <p class="text-muted mb-0">
                                    <a href="tel:+15551234567" class="text-decoration-none">
                                        +1 (555) 123-4567
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center">
                            <div class="contact-icon me-3">
                                <i class="bi bi-envelope-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Email</h6>
                                <p class="text-muted mb-0">
                                    <a href="mailto:contact@ecommerce-store.com" class="text-decoration-none">
                                        contact@ecommerce-store.com
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Business Hours -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-clock me-2"></i>Business Hours
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row text-sm">
                        <div class="col-8">Monday - Friday</div>
                        <div class="col-4 text-end">9:00 AM - 6:00 PM</div>
                    </div>
                    <hr class="my-2">
                    <div class="row text-sm">
                        <div class="col-8">Saturday</div>
                        <div class="col-4 text-end">10:00 AM - 4:00 PM</div>
                    </div>
                    <hr class="my-2">
                    <div class="row text-sm">
                        <div class="col-8">Sunday</div>
                        <div class="col-4 text-end text-muted">Closed</div>
                    </div>
                </div>
            </div>

            <!-- Social Media -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-share me-2"></i>Follow Us
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section (Optional) -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-map me-2"></i>Find Us
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="map-container" style="height: 300px; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                        <div class="text-center text-muted">
                            <i class="bi bi-geo-alt display-1 mb-3"></i>
                            <p>Interactive map will be loaded here</p>
                            <small>123 Business Street, City, State 12345</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
