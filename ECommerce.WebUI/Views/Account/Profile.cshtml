@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>My Account
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Profile" class="list-group-item list-group-item-action active">
                        <i class="bi bi-person me-2"></i>Profile
                    </a>
                    <a asp-action="Orders" class="list-group-item list-group-item-action">
                        <i class="bi bi-bag me-2"></i>My Orders
                    </a>
                    <a asp-action="Wishlist" class="list-group-item list-group-item-action">
                        <i class="bi bi-heart me-2"></i>Wishlist
                    </a>
                    <a asp-action="Addresses" class="list-group-item list-group-item-action">
                        <i class="bi bi-geo-alt me-2"></i>Addresses
                    </a>
                    <a asp-action="Settings" class="list-group-item list-group-item-action">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a>
                </div>
                <div class="card-footer">
                    <form asp-action="Logout" method="post" class="d-grid">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="bi bi-person me-2"></i>Profile Information
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Profile Stats -->
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="p-3 bg-primary bg-opacity-10 rounded">
                                <i class="bi bi-calendar3 display-6 text-primary"></i>
                                <h6 class="mt-2">Member Since</h6>
                                <p class="text-muted mb-0">@Model.MemberSince</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-3 bg-success bg-opacity-10 rounded">
                                <i class="bi bi-box-arrow-in-right display-6 text-success"></i>
                                <h6 class="mt-2">Last Login</h6>
                                <p class="text-muted mb-0">@Model.FormattedLastLogin</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-3 bg-info bg-opacity-10 rounded">
                                <i class="bi bi-graph-up display-6 text-info"></i>
                                <h6 class="mt-2">Total Logins</h6>
                                <p class="text-muted mb-0">@Model.LoginCount</p>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Form -->
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="IsActive" />
                        <input type="hidden" asp-for="LastLoginDate" />
                        <input type="hidden" asp-for="LoginCount" />
                        <input type="hidden" asp-for="CreatedDate" />

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Username</label>
                                <input type="text" class="form-control" value="@Model.UserName" readonly />
                                <div class="form-text">Username cannot be changed</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" value="@Model.Email" readonly />
                                <div class="form-text">Contact support to change email</div>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="(555) 123-4567" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Update Profile
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-clockwise me-2"></i>Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Account Security Card -->
            <div class="card mt-4">
                <div class="card-header bg-warning bg-opacity-10">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>Account Security
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6>Password</h6>
                            <p class="text-muted small">Last changed: Not available</p>
                            <button class="btn btn-outline-primary btn-sm">Change Password</button>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6>Two-Factor Authentication</h6>
                            <p class="text-muted small">Add an extra layer of security</p>
                            <button class="btn btn-outline-success btn-sm">Enable 2FA</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
