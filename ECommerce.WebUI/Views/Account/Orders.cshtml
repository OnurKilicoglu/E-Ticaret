@model OrderHistoryViewModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>My Account
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Profile" class="list-group-item list-group-item-action">
                        <i class="bi bi-person me-2"></i>Profile
                    </a>
                    <a asp-action="Orders" class="list-group-item list-group-item-action active">
                        <i class="bi bi-bag me-2"></i>My Orders
                    </a>
                    <a asp-action="Wishlist" class="list-group-item list-group-item-action">
                        <i class="bi bi-heart me-2"></i>Wishlist
                    </a>
                    <a asp-action="Addresses" class="list-group-item list-group-item-action">
                        <i class="bi bi-geo-alt me-2"></i>Addresses
                    </a>
                    <a asp-action="Settings" class="list-group-item list-group-item-action">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a>
                </div>
                <div class="card-footer">
                    <form asp-action="Logout" method="post" class="d-grid">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-bag me-2"></i>Order History
                    </h4>
                    <div class="d-flex gap-2">
                        <select class="form-select form-select-sm" style="width: auto;">
                            <option>All Orders</option>
                            <option>Pending</option>
                            <option>Processing</option>
                            <option>Shipped</option>
                            <option>Delivered</option>
                            <option>Cancelled</option>
                        </select>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Orders.Any())
                    {
                        <!-- Orders List -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@order.OrderNumber</strong>
                                            </td>
                                            <td>@order.FormattedOrderDate</td>
                                            <td>
                                                <span class="badge bg-secondary">@order.ItemCount items</span>
                                            </td>
                                            <td>
                                                <strong>@order.FormattedTotalAmount</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-@order.StatusBadgeClass">@order.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary">
                                                        <i class="bi bi-download"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Order pagination" class="mt-3">
                                <ul class="pagination justify-content-center">
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Orders" asp-route-page="@(Model.CurrentPage - 1)">
                                                Previous
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Orders" asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (Model.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Orders" asp-route-page="@(Model.CurrentPage + 1)">
                                                Next
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <!-- No Orders -->
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="bi bi-bag-x display-1 text-muted"></i>
                            </div>
                            <h4 class="text-muted">No Orders Found</h4>
                            <p class="text-muted mb-4">
                                You haven't placed any orders yet. Start shopping to see your order history here!
                            </p>
                            <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-bag-plus me-2"></i>Start Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-arrow-repeat display-4 text-primary mb-3"></i>
                            <h6>Reorder</h6>
                            <p class="text-muted small">Quickly reorder your favorite items</p>
                            <button class="btn btn-outline-primary btn-sm">Browse History</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-truck display-4 text-success mb-3"></i>
                            <h6>Track Package</h6>
                            <p class="text-muted small">Get real-time updates on your shipments</p>
                            <button class="btn btn-outline-success btn-sm">Track Order</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-chat-dots display-4 text-info mb-3"></i>
                            <h6>Need Help?</h6>
                            <p class="text-muted small">Contact support for order assistance</p>
                            <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-info btn-sm">
                                Contact Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
