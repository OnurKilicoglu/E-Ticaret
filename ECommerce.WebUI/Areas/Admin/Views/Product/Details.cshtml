@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Product Details";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Products</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="bi bi-eye text-primary"></i>
            Product Details
            @if (Model.IsFeatured)
            {
                <span class="badge bg-warning text-dark ms-2">
                    <i class="bi bi-star-fill"></i>
                    Featured
                </span>
            }
            @if (!Model.IsActive)
            {
                <span class="badge bg-secondary ms-2">Inactive</span>
            }
        </h2>
        <p class="text-muted">Complete product information and analytics</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i>
                Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash"></i>
                Delete
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Main Content -->
<div class="row">
    <!-- Product Gallery and Basic Info -->
    <div class="col-lg-8">
        <!-- Image Gallery -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-images text-primary"></i>
                    Product Gallery
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    <!-- Main Image Display -->
                    <div class="row">
                        <div class="col-md-8">
                            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    @for (int i = 0; i < Model.ProductImages.Count; i++)
                                    {
                                        var image = Model.ProductImages.OrderBy(x => x.DisplayOrder).ElementAt(i);
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@image.ImageUrl" class="d-block w-100 rounded" 
                                                 alt="@image.AltText" style="max-height: 400px; object-fit: contain;">
                                            @if (image.IsMain)
                                            {
                                                <div class="position-absolute top-0 start-0 m-3">
                                                    <span class="badge bg-primary">
                                                        <i class="bi bi-star-fill"></i>
                                                        Main Image
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                                
                                @if (Model.ProductImages.Count > 1)
                                {
                                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-2"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon bg-dark rounded-circle p-2"></span>
                                    </button>
                                }
                            </div>
                        </div>
                        
                        <!-- Thumbnail Navigation -->
                        <div class="col-md-4">
                            <div class="row">
                                @foreach (var image in Model.ProductImages.OrderBy(x => x.DisplayOrder))
                                {
                                    <div class="col-6 col-md-12 mb-2">
                                        <img src="@image.ImageUrl" 
                                             class="img-thumbnail cursor-pointer thumbnail-nav" 
                                             alt="@image.AltText"
                                             data-bs-target="#productCarousel" 
                                             data-bs-slide-to="@Model.ProductImages.OrderBy(x => x.DisplayOrder).ToList().IndexOf(image)"
                                             style="height: 80px; width: 100%; object-fit: cover;">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-image display-1 text-muted"></i>
                        <h5 class="text-muted mt-3">No Images Available</h5>
                        <p class="text-muted">This product doesn't have any images uploaded.</p>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i>
                            Add Images
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Product Description -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-card-text text-primary"></i>
                    Product Description
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="lead">@Model.Description</p>
                }
                else
                {
                    <p class="text-muted fst-italic">No description available for this product.</p>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar with Product Info -->
    <div class="col-lg-4">
        <!-- Product Summary -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-box-seam"></i>
                    @Model.Name
                </h5>
            </div>
            <div class="card-body">
                <!-- Price Information -->
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Price Information</h6>
                    @if (Model.HasDiscount)
                    {
                        <div class="d-flex align-items-center">
                            <span class="text-decoration-line-through text-muted me-2">@Model.Price.ToString("C")</span>
                            <span class="h4 text-success mb-0">@Model.EffectivePrice.ToString("C")</span>
                        </div>
                        <div class="mt-1">
                            <span class="badge bg-success">
                                @Model.DiscountPercentage% OFF
                            </span>
                        </div>
                    }
                    else
                    {
                        <h4 class="text-primary mb-0">@Model.Price.ToString("C")</h4>
                    }
                </div>

                <!-- Stock Information -->
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Stock Information</h6>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Quantity:</span>
                        @if (Model.IsOutOfStock)
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-exclamation-triangle"></i>
                                Out of Stock
                            </span>
                        }
                        else if (Model.IsLowStock)
                        {
                            <span class="badge bg-warning text-dark fs-6">
                                <i class="bi bi-exclamation-circle"></i>
                                @Model.StockQuantity units (Low Stock)
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">@Model.StockQuantity units</span>
                        }
                    </div>
                </div>

                <!-- Product Identifiers -->
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Identifiers</h6>
                    <div class="row">
                        <div class="col-5"><small class="text-muted">Product ID:</small></div>
                        <div class="col-7"><code>@Model.Id</code></div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.SKU))
                    {
                        <div class="row">
                            <div class="col-5"><small class="text-muted">SKU:</small></div>
                            <div class="col-7"><code>@Model.SKU</code></div>
                        </div>
                    }
                </div>

                <!-- Category Information -->
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Category</h6>
                    <span class="badge bg-light text-dark border fs-6">
                        <i class="bi bi-tag"></i>
                        @Model.CategoryName
                    </span>
                </div>

                <!-- Brand Information -->
                @if (!string.IsNullOrEmpty(Model.Brand))
                {
                    <div class="mb-3">
                        <h6 class="text-muted mb-2">Brand</h6>
                        <span class="badge bg-info fs-6">@Model.Brand</span>
                    </div>
                }
            </div>
        </div>

        <!-- Analytics & Statistics -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up text-success"></i>
                    Analytics & Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-primary mb-0">@Model.ViewCount</h5>
                            <small class="text-muted">Total Views</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-info mb-0">@Model.ProductImages.Count</h5>
                        <small class="text-muted">Images</small>
                    </div>
                </div>
                
                <hr>
                
                <!-- Status Indicators -->
                <div class="mb-2">
                    <span class="me-2">Status:</span>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i>
                            Active
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="bi bi-x-circle"></i>
                            Inactive
                        </span>
                    }
                </div>
                
                @if (Model.IsFeatured)
                {
                    <div class="mb-2">
                        <span class="me-2">Featured:</span>
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-star-fill"></i>
                            Featured Product
                        </span>
                    </div>
                }
            </div>
        </div>

        <!-- Timestamps -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-clock-history text-info"></i>
                    Timestamps
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4"><small class="text-muted">Created:</small></div>
                    <div class="col-8">
                        <small>@Model.CreatedDate.ToString("MMM dd, yyyy")</small>
                        <br>
                        <small class="text-muted">@Model.CreatedDate.ToString("hh:mm tt")</small>
                    </div>
                </div>
                
                @if (Model.UpdatedDate.HasValue)
                {
                    <hr class="my-2">
                    <div class="row">
                        <div class="col-4"><small class="text-muted">Updated:</small></div>
                        <div class="col-8">
                            <small>@Model.UpdatedDate.Value.ToString("MMM dd, yyyy")</small>
                            <br>
                            <small class="text-muted">@Model.UpdatedDate.Value.ToString("hh:mm tt")</small>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning text-warning"></i>
                    Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i>
                        Edit Product
                    </a>
                    
                    <div class="btn-group" role="group">
                        @if (Model.IsActive)
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="toggleProductStatus(@Model.Id, false)">
                                <i class="bi bi-eye-slash"></i>
                                Deactivate
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-success" onclick="toggleProductStatus(@Model.Id, true)">
                                <i class="bi bi-eye"></i>
                                Activate
                            </button>
                        }
                        
                        @if (Model.IsFeatured)
                        {
                            <button type="button" class="btn btn-outline-secondary" onclick="toggleFeaturedStatus(@Model.Id, false)">
                                <i class="bi bi-star"></i>
                                Unfeature
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="toggleFeaturedStatus(@Model.Id, true)">
                                <i class="bi bi-star-fill"></i>
                                Feature
                            </button>
                        }
                    </div>
                    
                    <hr class="my-2">
                    
                    <a asp-action="Create" class="btn btn-outline-success">
                        <i class="bi bi-plus-circle"></i>
                        Create New Product
                    </a>
                    
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i>
                        Delete Product
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Thumbnail navigation for carousel
            $('.thumbnail-nav').on('click', function() {
                $('.thumbnail-nav').removeClass('border-primary');
                $(this).addClass('border-primary');
            });

            // Initialize first thumbnail as active
            $('.thumbnail-nav').first().addClass('border-primary');
        });

        // Toggle product status (activate/deactivate)
        function toggleProductStatus(productId, newStatus) {
            const action = newStatus ? 'activate' : 'deactivate';
            const confirmMessage = `Are you sure you want to ${action} this product?`;
            
            if (confirm(confirmMessage)) {
                // Here you could implement an AJAX call to update status
                // For now, we'll redirect to edit page
                window.location.href = '@Url.Action("Edit", new { id = Model.Id })';
            }
        }

        // Toggle featured status
        function toggleFeaturedStatus(productId, newStatus) {
            const action = newStatus ? 'feature' : 'unfeature';
            const confirmMessage = `Are you sure you want to ${action} this product?`;
            
            if (confirm(confirmMessage)) {
                // Here you could implement an AJAX call to update featured status
                // For now, we'll redirect to edit page
                window.location.href = '@Url.Action("Edit", new { id = Model.Id })';
            }
        }
    </script>

    <style>
        .cursor-pointer {
            cursor: pointer;
        }
        
        .thumbnail-nav {
            transition: border-color 0.3s ease;
        }
        
        .thumbnail-nav:hover {
            border-color: var(--bs-primary) !important;
        }
        
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: invert(1);
        }
    </style>
}
