@model BlogPostDeleteViewModel
@{
    ViewData["Title"] = "Delete Blog Post";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Blog Posts</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="bi bi-trash text-danger"></i>
            Delete Blog Post
        </h2>
        <p class="text-muted">Remove blog post from the system</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                <i class="bi bi-eye"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Posts
            </a>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Deletion Warning -->
<div class="alert alert-warning" role="alert">
    <div class="d-flex">
        <div class="flex-shrink-0">
            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
        </div>
        <div class="flex-grow-1 ms-3">
            <h5 class="alert-heading">Deletion Warning</h5>
            <p class="mb-2">
                You are about to delete this blog post from the system.
            </p>
            <ul class="mb-0">
                <li><strong>Soft Delete:</strong> Post will be deactivated and hidden from the website</li>
                @if (Model.CanBeHardDeleted)
                {
                    <li><strong>Hard Delete:</strong> Post, comments, and feature image will be permanently removed</li>
                }
                else
                {
                    <li><strong>Comments Impact:</strong> Post has @Model.CommentCount comments that will be affected</li>
                }
                <li><strong>SEO Impact:</strong> Post URL will become unavailable (consider redirects)</li>
            </ul>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Deletion Form -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-trash"></i>
                    Blog Post Deletion Confirmation
                </h5>
            </div>
            <div class="card-body">
                <!-- Post Preview -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h6 class="fw-bold">Blog Post Preview</h6>
                        <div class="card">
                            <div class="card-body p-0">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="position-relative">
                                        <img src="@Model.ImageUrl" alt="@Model.Title" 
                                             class="img-fluid w-100" style="max-height: 250px; object-fit: cover;">
                                        
                                        <!-- Status Overlay -->
                                        <div class="position-absolute top-0 start-0 p-2">
                                            <span class="badge bg-@Model.StatusCssClass">
                                                @Model.StatusDisplayName
                                            </span>
                                            @if (Model.IsFeatured)
                                            {
                                                <span class="badge bg-@Model.FeaturedCssClass ms-1">
                                                    <i class="bi bi-star-fill"></i>
                                                    Featured
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4 text-muted bg-light">
                                        <i class="bi bi-journal-text display-4"></i>
                                        <h5 class="mt-2">@Model.Title</h5>
                                        <p class="mb-0">No feature image</p>
                                    </div>
                                }
                                
                                <div class="p-3">
                                    <h5 class="mb-2">@Model.Title</h5>
                                    @if (!string.IsNullOrEmpty(Model.Summary))
                                    {
                                        <p class="text-muted mb-2">@Model.Summary</p>
                                    }
                                    <small class="text-muted">
                                        By @Model.Author
                                        @if (Model.PublishedDate.HasValue)
                                        {
                                            <span>â€¢ @Model.PublishedDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" novalidate>
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="Title" type="hidden" />
                    <input asp-for="Summary" type="hidden" />
                    <input asp-for="Author" type="hidden" />
                    <input asp-for="ImageUrl" type="hidden" />
                    <input asp-for="Category" type="hidden" />
                    <input asp-for="Tags" type="hidden" />
                    <input asp-for="IsPublished" type="hidden" />
                    <input asp-for="IsFeatured" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    <input asp-for="PublishedDate" type="hidden" />
                    <input asp-for="ViewCount" type="hidden" />
                    <input asp-for="CommentCount" type="hidden" />
                    <input asp-for="CanBeHardDeleted" type="hidden" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Post Information Display -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">Post Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Title:</dt>
                                <dd class="col-sm-8"><strong>@Model.Title</strong></dd>
                                
                                <dt class="col-sm-4">Author:</dt>
                                <dd class="col-sm-8">@Model.Author</dd>
                                
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Category))
                                    {
                                        @Model.Category
                                    }
                                    else
                                    {
                                        <em class="text-muted">No category</em>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Tags:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.TagList.Any())
                                    {
                                        @string.Join(", ", Model.TagList)
                                    }
                                    else
                                    {
                                        <em class="text-muted">No tags</em>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold">Status & Metrics</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-@Model.StatusCssClass">
                                        @Model.StatusDisplayName
                                    </span>
                                    @if (Model.IsFeatured)
                                    {
                                        <span class="badge bg-@Model.FeaturedCssClass ms-1">
                                            <i class="bi bi-star-fill"></i>
                                            Featured
                                        </span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-5">Views:</dt>
                                <dd class="col-sm-7">@Model.ViewCount</dd>
                                
                                <dt class="col-sm-5">Comments:</dt>
                                <dd class="col-sm-7">@Model.CommentCount</dd>
                                
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                                
                                @if (Model.PublishedDate.HasValue)
                                {
                                    <dt class="col-sm-5">Published:</dt>
                                    <dd class="col-sm-7">@Model.PublishedDate.Value.ToString("MMM dd, yyyy")</dd>
                                }
                                
                                <dt class="col-sm-5">Image:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <span class="text-success">
                                            <i class="bi bi-check-circle"></i>
                                            Feature image
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-x-circle"></i>
                                            No image
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Deletion Options -->
                    @if (Model.CanBeHardDeleted)
                    {
                        <h6 class="fw-bold mb-3">Deletion Options</h6>
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="HardDelete" class="form-check-input" type="checkbox" />
                                    <label asp-for="HardDelete" class="form-check-label">
                                        <strong>Permanent Deletion</strong> (Hard Delete)
                                    </label>
                                </div>
                                <div class="form-text">
                                    <i class="bi bi-exclamation-triangle text-warning"></i>
                                    <strong>Warning:</strong> This will permanently remove the post, its feature image, and all associated data.
                                    If unchecked, the post will be deactivated (soft delete).
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Soft Delete Only:</strong> This post has @Model.CommentCount comments and cannot be permanently deleted.
                            The post will be deactivated and hidden from the website, but data will be preserved for integrity.
                        </div>
                    }

                    <!-- Deletion Reason -->
                    <div class="mb-4">
                        <label asp-for="Reason" class="form-label required">Reason for Deletion</label>
                        <textarea asp-for="Reason" class="form-control" rows="3" 
                                  placeholder="Please provide a reason for deleting this blog post..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i>
                            This reason will be logged for audit purposes.
                        </div>
                    </div>

                    <!-- Final Confirmation -->
                    <div class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i>
                            Final Confirmation Required
                        </h6>
                        <p class="mb-2">
                            Please review all information above carefully.
                        </p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmDeletion" required>
                            <label class="form-check-label" for="confirmDeletion">
                                <strong>I understand the consequences and confirm the deletion of blog post "@Model.Title"</strong>
                            </label>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                                Do Not Delete
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-danger" id="deletePostBtn" disabled>
                                <i class="bi bi-trash"></i>
                                Delete Blog Post
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Deletion Impact -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle text-warning"></i>
                    Deletion Impact
                </h6>
            </div>
            <div class="card-body">
                <div class="impact-summary">
                    <div class="impact-item @(Model.IsPublished ? "text-warning" : "text-success")">
                        <i class="bi bi-@(Model.IsPublished ? "exclamation-triangle" : "check-circle") me-2"></i>
                        <span>@(Model.IsPublished ? "Published post - visible on website" : "Draft post - not visible")</span>
                    </div>
                    
                    <div class="impact-item @(Model.ViewCount > 0 ? "text-info" : "text-success")">
                        <i class="bi bi-@(Model.ViewCount > 0 ? "eye" : "check-circle") me-2"></i>
                        <span>@(Model.ViewCount > 0 ? $"{Model.ViewCount} page views will be lost" : "No page views to lose")</span>
                    </div>
                    
                    <div class="impact-item @(Model.CommentCount > 0 ? "text-warning" : "text-success")">
                        <i class="bi bi-@(Model.CommentCount > 0 ? "chat" : "check-circle") me-2"></i>
                        <span>@(Model.CommentCount > 0 ? $"{Model.CommentCount} comments will be affected" : "No comments to affect")</span>
                    </div>
                    
                    <div class="impact-item @(!string.IsNullOrEmpty(Model.ImageUrl) ? "text-info" : "text-success")">
                        <i class="bi bi-@(!string.IsNullOrEmpty(Model.ImageUrl) ? "image" : "check-circle") me-2"></i>
                        <span>@(!string.IsNullOrEmpty(Model.ImageUrl) ? "Has feature image file" : "No image to remove")</span>
                    </div>
                    
                    @if (Model.IsFeatured)
                    {
                        <div class="impact-item text-warning">
                            <i class="bi bi-star-fill me-2"></i>
                            <span>Featured post - homepage will be affected</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Alternative Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb text-info"></i>
                    Alternative Actions
                </h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Consider these alternatives before deleting:
                </p>
                
                <div class="d-grid gap-2">
                    @if (Model.IsPublished)
                    {
                        <button type="button" class="btn btn-outline-warning btn-sm unpublish-post" 
                                data-post-id="@Model.Id">
                            <i class="bi bi-pause-fill"></i>
                            Just Unpublish
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-success btn-sm publish-post" 
                                data-post-id="@Model.Id">
                            <i class="bi bi-play-fill"></i>
                            Publish Instead
                        </button>
                    }
                    
                    @if (Model.IsFeatured)
                    {
                        <button type="button" class="btn btn-outline-warning btn-sm unfeature-post" 
                                data-post-id="@Model.Id">
                            <i class="bi bi-star"></i>
                            Remove Featured
                        </button>
                    }
                    
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                        Edit Post Instead
                    </a>
                    
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-eye"></i>
                        View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on confirmation checkbox
            $('#confirmDeletion').on('change', function() {
                $('#deletePostBtn').prop('disabled', !this.checked);
            });

            // Form submission with final confirmation
            $('form').on('submit', function(e) {
                if (!$('#confirmDeletion').is(':checked')) {
                    e.preventDefault();
                    alert('Please confirm that you understand the consequences.');
                    return false;
                }

                const reason = $('#Reason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    alert('Please provide a reason for deletion.');
                    $('#Reason').focus();
                    return false;
                }

                const isHardDelete = $('#HardDelete').is(':checked');
                const deleteType = isHardDelete ? 'permanently delete' : 'deactivate';
                
                const confirmMessage = `Are you sure you want to ${deleteType} blog post "@Model.Title"?\n\n` +
                                     `This will:\n` +
                                     `â€¢ ${isHardDelete ? 'Permanently remove' : 'Deactivate'} the post\n` +
                                     @(!string.IsNullOrEmpty(Model.ImageUrl) ? "`â€¢ Delete/Keep the feature image\\n`" : "") +
                                     @(Model.CommentCount > 0 ? "`â€¢ Affect " + Model.CommentCount + " comments\\n`" : "") +
                                     `â€¢ Log the action for audit purposes\n` +
                                     `\nReason: ${reason}\n\n` +
                                     `${isHardDelete ? 'This action cannot be undone.' : 'Post can be reactivated later.'}`;

                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
            });

            // Quick action functionality
            $('.unpublish-post, .publish-post').on('click', function() {
                const postId = $(this).data('post-id');
                const action = $(this).hasClass('unpublish-post') ? 'unpublish' : 'publish';
                
                if (confirm(`Are you sure you want to ${action} this post instead of deleting it?`)) {
                    $.post('@Url.Action("TogglePublished")', { id: postId })
                        .done(function(response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Details", new { id = Model.Id })';
                            } else {
                                alert('Error: ' + response.message);
                            }
                        })
                        .fail(function() {
                            alert('Error updating published status');
                        });
                }
            });

            $('.unfeature-post').on('click', function() {
                const postId = $(this).data('post-id');
                
                if (confirm('Are you sure you want to remove featured status instead of deleting the post?')) {
                    $.post('@Url.Action("ToggleFeatured")', { id: postId })
                        .done(function(response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Details", new { id = Model.Id })';
                            } else {
                                alert('Error: ' + response.message);
                            }
                        })
                        .fail(function() {
                            alert('Error updating featured status');
                        });
                }
            });
        });
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
        }
        
        .impact-summary {
            list-style: none;
            padding: 0;
        }
        
        .impact-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
    </style>
}
