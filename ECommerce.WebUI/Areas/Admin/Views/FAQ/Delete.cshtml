@model FAQDeleteViewModel
@{
    ViewData["Title"] = "Delete FAQ";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">FAQs</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Id">FAQ Details</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="bi bi-trash text-danger"></i>
            Delete FAQ
        </h2>
        <p class="text-muted">Remove FAQ from the system</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                <i class="bi bi-eye"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to FAQs
            </a>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Deletion Warning -->
<div class="alert alert-warning" role="alert">
    <div class="d-flex">
        <div class="flex-shrink-0">
            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
        </div>
        <div class="flex-grow-1 ms-3">
            <h5 class="alert-heading">Deletion Warning</h5>
            <p class="mb-2">
                You are about to delete this FAQ from the system.
            </p>
            <ul class="mb-0">
                <li><strong>Soft Delete:</strong> FAQ will be deactivated and hidden from users</li>
                <li><strong>Hard Delete:</strong> FAQ and all associated data will be permanently removed</li>
                <li><strong>User Impact:</strong> FAQ will no longer be available to website visitors</li>
                <li><strong>Search Impact:</strong> FAQ will be removed from search results</li>
            </ul>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Deletion Form -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-trash"></i>
                    FAQ Deletion Confirmation
                </h5>
            </div>
            <div class="card-body">
                <!-- FAQ Preview -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h6 class="fw-bold">FAQ to be deleted:</h6>
                        <div class="card">
                            <div class="card-body">
                                <div class="faq-preview">
                                    <h6 class="fw-bold text-primary">
                                        <i class="bi bi-question-circle-fill"></i>
                                        @Model.Question
                                    </h6>
                                    <p class="text-muted mt-2">@Model.TruncatedAnswer</p>
                                    
                                    <div class="d-flex gap-2 mt-3">
                                        <span class="badge bg-@Model.StatusCssClass">
                                            @Model.StatusDisplayName
                                        </span>
                                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-tag"></i>
                                                @Model.CategoryName
                                            </span>
                                        }
                                        @if (Model.TagList.Any())
                                        {
                                            @foreach (var tag in Model.TagList.Take(3))
                                            {
                                                <span class="badge bg-light text-dark">@tag</span>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" novalidate>
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="Question" type="hidden" />
                    <input asp-for="Answer" type="hidden" />
                    <input asp-for="CategoryName" type="hidden" />
                    <input asp-for="IsActive" type="hidden" />
                    <input asp-for="ViewCount" type="hidden" />
                    <input asp-for="HelpfulCount" type="hidden" />
                    <input asp-for="NotHelpfulCount" type="hidden" />
                    <input asp-for="Tags" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- FAQ Information Display -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">FAQ Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>
                                
                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@Model.StatusCssClass">
                                        @Model.StatusDisplayName
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.CategoryName))
                                    {
                                        @Model.CategoryName
                                    }
                                    else
                                    {
                                        <em class="text-muted">No category</em>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold">Usage Statistics</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Views:</dt>
                                <dd class="col-sm-7">@Model.ViewCount</dd>
                                
                                <dt class="col-sm-5">Helpful Votes:</dt>
                                <dd class="col-sm-7">@Model.HelpfulCount</dd>
                                
                                <dt class="col-sm-5">Not Helpful:</dt>
                                <dd class="col-sm-7">@Model.NotHelpfulCount</dd>
                                
                                <dt class="col-sm-5">Score:</dt>
                                <dd class="col-sm-7">
                                    @{
                                        var score = Model.HelpfulCount - Model.NotHelpfulCount;
                                    }
                                    <span class="@(score > 0 ? "text-success" : score < 0 ? "text-danger" : "text-muted")">
                                        @score points
                                    </span>
                                </dd>
                                
                                @if (Model.TagList.Any())
                                {
                                    <dt class="col-sm-5">Tags:</dt>
                                    <dd class="col-sm-7">@string.Join(", ", Model.TagList)</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Deletion Options -->
                    <h6 class="fw-bold mb-3">Deletion Options</h6>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="form-check">
                                <input asp-for="HardDelete" class="form-check-input" type="checkbox" />
                                <label asp-for="HardDelete" class="form-check-label">
                                    <strong>Permanent Deletion</strong> (Hard Delete)
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-exclamation-triangle text-warning"></i>
                                <strong>Warning:</strong> This will permanently remove the FAQ and all associated data.
                                If unchecked, the FAQ will be deactivated (soft delete).
                            </div>
                        </div>
                    </div>

                    <!-- Deletion Reason -->
                    <div class="mb-4">
                        <label asp-for="Reason" class="form-label required">Reason for Deletion</label>
                        <textarea asp-for="Reason" class="form-control" rows="3" 
                                  placeholder="Please provide a reason for deleting this FAQ..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i>
                            This reason will be logged for audit purposes.
                        </div>
                    </div>

                    <!-- Final Confirmation -->
                    <div class="alert alert-danger" role="alert">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i>
                            Final Confirmation Required
                        </h6>
                        <p class="mb-2">
                            Please review all information above carefully.
                        </p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmDeletion" required>
                            <label class="form-check-label" for="confirmDeletion">
                                <strong>I understand the consequences and confirm the deletion of FAQ "@Model.Question"</strong>
                            </label>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                                Do Not Delete
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="bi bi-trash"></i>
                                Delete FAQ
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Deletion Impact -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle text-warning"></i>
                    Deletion Impact
                </h6>
            </div>
            <div class="card-body">
                <div class="impact-summary">
                    <div class="impact-item @(Model.IsActive ? "text-warning" : "text-success")">
                        <i class="bi bi-@(Model.IsActive ? "exclamation-triangle" : "check-circle") me-2"></i>
                        <span>@(Model.IsActive ? "Active FAQ - visible on website" : "Inactive FAQ - already hidden")</span>
                    </div>
                    
                    <div class="impact-item @(Model.ViewCount > 0 ? "text-info" : "text-success")">
                        <i class="bi bi-@(Model.ViewCount > 0 ? "eye" : "check-circle") me-2"></i>
                        <span>@(Model.ViewCount > 0 ? $"{Model.ViewCount} user views will be lost" : "No user views to lose")</span>
                    </div>
                    
                    <div class="impact-item @(Model.HelpfulCount > 0 || Model.NotHelpfulCount > 0 ? "text-warning" : "text-success")">
                        <i class="bi bi-@(Model.HelpfulCount > 0 || Model.NotHelpfulCount > 0 ? "hand-thumbs-up" : "check-circle") me-2"></i>
                        <span>@(Model.HelpfulCount + Model.NotHelpfulCount > 0 ? $"{Model.HelpfulCount + Model.NotHelpfulCount} user feedback votes will be lost" : "No user feedback to lose")</span>
                    </div>
                    
                    @if (Model.TagList.Any())
                    {
                        <div class="impact-item text-info">
                            <i class="bi bi-tags me-2"></i>
                            <span>Tags: @string.Join(", ", Model.TagList)</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Alternative Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb text-info"></i>
                    Alternative Actions
                </h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">
                    Consider these alternatives before deleting:
                </p>
                
                <div class="d-grid gap-2">
                    @if (Model.IsActive)
                    {
                        <button type="button" class="btn btn-outline-warning btn-sm deactivate-faq" 
                                data-faq-id="@Model.Id">
                            <i class="bi bi-pause-fill"></i>
                            Just Deactivate
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-success btn-sm activate-faq" 
                                data-faq-id="@Model.Id">
                            <i class="bi bi-play-fill"></i>
                            Activate Instead
                        </button>
                    }
                    
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                        Edit FAQ Instead
                    </a>
                    
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-eye"></i>
                        View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on confirmation checkbox
            $('#confirmDeletion').on('change', function() {
                $('#deleteBtn').prop('disabled', !this.checked);
            });

            // Form submission with final confirmation
            $('form').on('submit', function(e) {
                if (!$('#confirmDeletion').is(':checked')) {
                    e.preventDefault();
                    alert('Please confirm that you understand the consequences.');
                    return false;
                }

                const reason = $('#Reason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    alert('Please provide a reason for deletion.');
                    $('#Reason').focus();
                    return false;
                }

                const isHardDelete = $('#HardDelete').is(':checked');
                const deleteType = isHardDelete ? 'permanently delete' : 'deactivate';
                
                const confirmMessage = `Are you sure you want to ${deleteType} FAQ "@Model.Question"?\n\n` +
                                     `This will:\n` +
                                     `• ${isHardDelete ? 'Permanently remove' : 'Deactivate'} the FAQ\n` +
                                     `• Remove from website search results\n` +
                                     `• Log the action for audit purposes\n` +
                                     `\nReason: ${reason}\n\n` +
                                     `${isHardDelete ? 'This action cannot be undone.' : 'FAQ can be reactivated later.'}`;

                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
            });

            // Alternative action functionality
            $('.deactivate-faq, .activate-faq').on('click', function() {
                const faqId = $(this).data('faq-id');
                const action = $(this).hasClass('deactivate-faq') ? 'deactivate' : 'activate';
                
                if (confirm(`Are you sure you want to ${action} this FAQ instead of deleting it?`)) {
                    $.post('@Url.Action("ToggleStatus")', { id: faqId })
                        .done(function(response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Details", new { id = Model.Id })';
                            } else {
                                alert('Error: ' + response.message);
                            }
                        })
                        .fail(function() {
                            alert('Error updating FAQ status');
                        });
                }
            });
        });
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
        }
        
        .impact-summary {
            list-style: none;
            padding: 0;
        }
        
        .impact-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .faq-preview {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 0.375rem;
            border-left: 4px solid var(--bs-primary);
        }
    </style>
}


