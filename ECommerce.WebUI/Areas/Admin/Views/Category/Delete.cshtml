@model CategoryDeleteViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Categories</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Delete @Model.Name</li>
            </ol>
        </nav>
        <h2 class="mb-0 text-danger">
            <i class="bi bi-exclamation-triangle"></i>
            Delete Category
        </h2>
        <p class="text-muted">Confirm category deletion</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Back to Categories
        </a>
    </div>
</div>

<!-- Delete Confirmation -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                @if (Model.HasProducts)
                {
                    <!-- Category with Products Warning -->
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            Cannot Delete Category
                        </h5>
                        <p class="mb-0">
                            This category contains <strong>@Model.ProductCount product(s)</strong> and cannot be permanently deleted.
                            Instead, the category will be <strong>deactivated</strong> to preserve data integrity.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-danger">What will happen:</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> Category will be marked as inactive</li>
                                <li><i class="bi bi-check-circle text-success"></i> Products will be hidden from customers</li>
                                <li><i class="bi bi-check-circle text-success"></i> Data will be preserved for reporting</li>
                                <li><i class="bi bi-check-circle text-success"></i> Can be reactivated later</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-warning">To permanently delete:</h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-arrow-right"></i> Move products to other categories</li>
                                <li><i class="bi bi-arrow-right"></i> Or delete all products first</li>
                                <li><i class="bi bi-arrow-right"></i> Then return to delete this category</li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Empty Category Warning -->
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="bi bi-trash-fill"></i>
                            Permanent Deletion
                        </h5>
                        <p class="mb-0">
                            This category has no products and will be <strong>permanently deleted</strong>.
                            This action cannot be undone.
                        </p>
                    </div>
                }

                <!-- Category Information -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h4 class="text-dark">@Model.Name</h4>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted">@Model.Description</p>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No description provided</p>
                        }
                    </div>
                    <div class="col-md-4">
                        <div class="text-end">
                            <div class="mb-2">
                                <span class="badge bg-@(Model.HasProducts ? "warning" : "light") fs-6">
                                    @Model.ProductCount Product(s)
                                </span>
                            </div>
                            <small class="text-muted">
                                Created: @Model.CreatedDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Confirmation Form -->
                <form asp-action="Delete" method="post">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label text-danger" for="confirmDelete">
                                @if (Model.HasProducts)
                                {
                                    <strong>I understand this category will be deactivated and products will be hidden from customers.</strong>
                                }
                                else
                                {
                                    <strong>I understand this category will be permanently deleted and this action cannot be undone.</strong>
                                }
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Cancel
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                                <i class="bi bi-pencil"></i>
                                Edit Instead
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                <i class="bi bi-trash"></i>
                                @(Model.HasProducts ? "Deactivate Category" : "Delete Category")
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.HasProducts)
        {
            <!-- Alternative Actions -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-lightbulb text-warning"></i>
                        Alternative Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">
                                <i class="bi bi-arrow-repeat"></i>
                                Move Products
                            </h6>
                            <p class="text-muted small">
                                Consider moving products to existing categories before deletion.
                                This preserves the products and allows permanent category removal.
                            </p>
                            <a href="#" class="btn btn-sm btn-outline-primary" onclick="alert('Feature coming soon!')">
                                <i class="bi bi-box-arrow-right"></i>
                                Move Products
                            </a>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">
                                <i class="bi bi-pencil"></i>
                                Edit Category
                            </h6>
                            <p class="text-muted small">
                                Modify the category name, description, or settings instead of deleting.
                                You can also deactivate temporarily.
                            </p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                                Edit Category
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on confirmation checkbox
            $('#confirmDelete').on('change', function() {
                $('#deleteButton').prop('disabled', !$(this).is(':checked'));
            });

            // Add confirmation dialog for extra safety
            $('form[asp-action="Delete"]').on('submit', function(e) {
                const hasProducts = @Model.HasProducts.ToString().ToLower();
                const productCount = @Model.ProductCount;
                
                let message;
                if (hasProducts) {
                    message = `Are you sure you want to deactivate the category "${@Model.Name}"?\n\nThis will hide ${productCount} product(s) from customers.`;
                } else {
                    message = `Are you sure you want to permanently delete the category "${@Model.Name}"?\n\nThis action cannot be undone.`;
                }
                
                if (!confirm(message)) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>

    <style>
        .card.border-danger {
            border-width: 2px;
        }
        
        .alert-heading {
            margin-bottom: 1rem;
        }
        
        .list-unstyled li {
            margin-bottom: 0.25rem;
        }
    </style>
}
