@model OrderCancelViewModel
@{
    ViewData["Title"] = "Cancel Order";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Orders</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Id">@Model.OrderNumber</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Cancel Order</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="bi bi-x-circle text-danger"></i>
            Cancel Order
        </h2>
        <p class="text-muted">Cancel this order and handle related business processes</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                <i class="bi bi-eye"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Orders
            </a>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Cancellation Eligibility Check -->
@if (!Model.CanBeCancelled)
{
    <div class="alert alert-warning" role="alert">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="bi bi-shield-exclamation fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h5 class="alert-heading">Order Cannot Be Cancelled</h5>
                <p class="mb-2">
                    This order is in <strong>@Model.CurrentStatus</strong> status and cannot be cancelled at this stage.
                </p>
                <p class="mb-0">
                    <strong>Available Actions:</strong> You may be able to process a return or refund instead.
                </p>
            </div>
        </div>
    </div>
    
    <div class="text-center">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i>
            Return to Order Details
        </a>
    </div>
}
else
{
    <!-- Business Impact Warning -->
    <div class="alert alert-warning" role="alert">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h5 class="alert-heading">Order Cancellation Impact</h5>
                <p class="mb-2">
                    Cancelling this order will trigger several automatic processes:
                </p>
                <ul class="mb-0">
                    <li><strong>Inventory Restoration:</strong> All ordered items will be returned to stock</li>
                    @if (Model.HasPayment)
                    {
                        <li><strong>Payment Refund:</strong> @Model.RefundAmount will be refunded to the customer</li>
                    }
                    <li><strong>Customer Notification:</strong> Customer will receive a cancellation email</li>
                    <li><strong>Audit Trail:</strong> Cancellation will be logged for compliance</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Cancellation Form -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-x-circle"></i>
                        Order Cancellation Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="OrderNumber" type="hidden" />
                        <input asp-for="CurrentStatus" type="hidden" />
                        <input asp-for="CustomerName" type="hidden" />
                        <input asp-for="OrderDate" type="hidden" />
                        <input asp-for="TotalAmount" type="hidden" />
                        <input asp-for="PaymentStatus" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Order Information Display -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="fw-bold">Order Information</h6>
                                <dl class="row">
                                    <dt class="col-sm-5">Order Number:</dt>
                                    <dd class="col-sm-7"><strong>@Model.OrderNumber</strong></dd>
                                    
                                    <dt class="col-sm-5">Customer:</dt>
                                    <dd class="col-sm-7">@Model.CustomerName</dd>
                                    
                                    <dt class="col-sm-5">Order Date:</dt>
                                    <dd class="col-sm-7">@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</dd>
                                    
                                    <dt class="col-sm-5">Current Status:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-@GetStatusCssClass(Model.CurrentStatus)">
                                            @Model.CurrentStatus.ToString()
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold">Financial Information</h6>
                                <dl class="row">
                                    <dt class="col-sm-5">Order Total:</dt>
                                    <dd class="col-sm-7"><strong>@Model.TotalAmount.ToString("C")</strong></dd>
                                    
                                    <dt class="col-sm-5">Payment Status:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.PaymentStatus.HasValue)
                                        {
                                            <span class="badge bg-@GetPaymentStatusCssClass(Model.PaymentStatus.Value)">
                                                @Model.PaymentStatus.Value.ToString()
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Payment</span>
                                        }
                                    </dd>
                                    
                                    @if (Model.HasPayment)
                                    {
                                        <dt class="col-sm-5">Refund Amount:</dt>
                                        <dd class="col-sm-7 text-warning"><strong>@Model.RefundAmount</strong></dd>
                                    }
                                </dl>
                            </div>
                        </div>

                        <!-- Cancellation Reason -->
                        <div class="mb-4">
                            <label asp-for="Reason" class="form-label required">Cancellation Reason</label>
                            <textarea asp-for="Reason" class="form-control" rows="4" 
                                      placeholder="Please provide a detailed reason for cancelling this order..."></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                This reason will be included in the customer notification and audit log.
                            </div>
                        </div>

                        <!-- Processing Options -->
                        <div class="row mb-4">
                            @if (Model.HasPayment)
                            {
                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        <input asp-for="ProcessRefund" class="form-check-input" type="checkbox" />
                                        <label asp-for="ProcessRefund" class="form-check-label">
                                            Process automatic refund
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-credit-card"></i>
                                        Refund @Model.RefundAmount to customer's payment method
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="SendNotification" class="form-check-input" type="checkbox" />
                                    <label asp-for="SendNotification" class="form-check-label">
                                        Send cancellation notification
                                    </label>
                                </div>
                                <div class="form-text">
                                    <i class="bi bi-envelope"></i>
                                    Email customer about the order cancellation
                                </div>
                            </div>
                        </div>

                        <!-- Confirmation and Actions -->
                        <div class="alert alert-danger" role="alert">
                            <h6 class="alert-heading">
                                <i class="bi bi-exclamation-triangle"></i>
                                Final Confirmation Required
                            </h6>
                            <p class="mb-2">
                                Please review all information above carefully. Order cancellation is an irreversible action.
                            </p>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmCancellation" required>
                                <label class="form-check-label" for="confirmCancellation">
                                    <strong>I understand that this action cannot be undone and confirm the cancellation</strong>
                                </label>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i>
                                    Do Not Cancel
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-danger" id="cancelOrderBtn" disabled>
                                    <i class="bi bi-x-circle"></i>
                                    Cancel Order
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Cancellation Checklist -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-list-check text-success"></i>
                        Cancellation Checklist
                    </h6>
                </div>
                <div class="card-body">
                    <div class="checklist">
                        <div class="checklist-item">
                            <i class="bi bi-check-circle text-success"></i>
                            <span>Order is eligible for cancellation</span>
                        </div>
                        <div class="checklist-item">
                            <i class="bi bi-check-circle text-success"></i>
                            <span>Customer notification will be sent</span>
                        </div>
                        @if (Model.HasPayment)
                        {
                            <div class="checklist-item">
                                <i class="bi bi-check-circle text-success"></i>
                                <span>Refund will be processed automatically</span>
                            </div>
                        }
                        <div class="checklist-item">
                            <i class="bi bi-check-circle text-success"></i>
                            <span>Inventory will be restored</span>
                        </div>
                        <div class="checklist-item">
                            <i class="bi bi-check-circle text-success"></i>
                            <span>Audit trail will be maintained</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alternative Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-lightbulb text-warning"></i>
                        Alternative Actions
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-3">
                        Consider these alternatives before cancelling:
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i>
                            Change Order Status
                        </a>
                        
                        <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#contactCustomerModal">
                            <i class="bi bi-telephone"></i>
                            Contact Customer
                        </button>
                        
                        <button type="button" class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#addNoteModal">
                            <i class="bi bi-sticky"></i>
                            Add Admin Note
                        </button>
                    </div>
                </div>
            </div>

            <!-- Customer Impact -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-person-exclamation text-warning"></i>
                        Customer Impact
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <small>
                            <strong>Customer Experience:</strong><br>
                            • Will receive immediate email notification<br>
                            • @(Model.HasPayment ? "Refund processed within 3-5 business days" : "No payment to refund")<br>
                            • Order history will show cancellation<br>
                            • Can place new orders immediately
                        </small>
                    </div>
                    
                    <div class="customer-info">
                        <h6 class="small fw-bold">Customer: @Model.CustomerName</h6>
                        <small class="text-muted">
                            This customer's order history and satisfaction may be affected by this cancellation.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Customer Modal -->
    <div class="modal fade" id="contactCustomerModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Contact Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Consider contacting the customer before cancelling to:</p>
                    <ul>
                        <li>Discuss alternative solutions</li>
                        <li>Understand their specific needs</li>
                        <li>Offer modifications to the order</li>
                        <li>Maintain customer satisfaction</li>
                    </ul>
                    <div class="alert alert-info">
                        <strong>Customer:</strong> @Model.CustomerName<br>
                        <strong>Order:</strong> @Model.OrderNumber<br>
                        <strong>Total:</strong> @Model.TotalAmount.ToString("C")
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="mailto:customer@example.com?subject=Regarding Order @Model.OrderNumber" class="btn btn-primary">
                        <i class="bi bi-envelope"></i>
                        Send Email
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Note Modal -->
    <div class="modal fade" id="addNoteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Administrative Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="noteText" class="form-label">Note</label>
                        <textarea class="form-control" id="noteText" rows="3" 
                                  placeholder="Add a note about customer contact or other relevant information..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="addNote()">Add Note</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Enable/disable cancel button based on confirmation checkbox
            $('#confirmCancellation').on('change', function() {
                $('#cancelOrderBtn').prop('disabled', !this.checked);
            });

            // Form submission with final confirmation
            $('form').on('submit', function(e) {
                if (!$('#confirmCancellation').is(':checked')) {
                    e.preventDefault();
                    alert('Please confirm that you understand this action cannot be undone.');
                    return false;
                }

                const reason = $('#Reason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    alert('Please provide a cancellation reason.');
                    $('#Reason').focus();
                    return false;
                }

                // Final confirmation dialog
                const confirmMessage = `Are you absolutely sure you want to cancel order @Model.OrderNumber?\n\n` +
                                     `This will:\n` +
                                     `• Cancel the order permanently\n` +
                                     `• Restore inventory\n` +
                                     @(Model.HasPayment ? "`• Process a refund of @Model.RefundAmount\\n`" : "") +
                                     `• Notify the customer\n\n` +
                                     `This action cannot be undone.`;

                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
            });
        });

        function addNote() {
            const noteText = $('#noteText').val().trim();
            if (!noteText) {
                alert('Please enter a note');
                return;
            }

            $.post('@Url.Action("AddNote", "Order")', {
                orderId: @Model.Id,
                note: noteText
            })
            .done(function(response) {
                if (response.success) {
                    $('#addNoteModal').modal('hide');
                    alert('Note added successfully');
                    $('#noteText').val('');
                } else {
                    alert('Error: ' + response.message);
                }
            })
            .fail(function() {
                alert('Error adding note');
            });
        }
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
        }
        
        .checklist {
            list-style: none;
            padding: 0;
        }
        
        .checklist-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .checklist-item i {
            margin-right: 8px;
            font-size: 1rem;
        }
        
        .customer-info {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #dee2e6;
        }
        
        .alert ul {
            margin-bottom: 0;
        }
    </style>
}

@functions {
    private string GetStatusCssClass(ECommerce.Core.Entities.OrderStatus status)
    {
        return status switch
        {
            ECommerce.Core.Entities.OrderStatus.Pending => "warning",
            ECommerce.Core.Entities.OrderStatus.Processing => "info",
            ECommerce.Core.Entities.OrderStatus.Shipped => "primary",
            ECommerce.Core.Entities.OrderStatus.Delivered => "success",
            ECommerce.Core.Entities.OrderStatus.Cancelled => "danger",
            ECommerce.Core.Entities.OrderStatus.Returned => "secondary",
            _ => "light"
        };
    }
    
    private string GetPaymentStatusCssClass(ECommerce.Core.Entities.PaymentStatus status)
    {
        return status switch
        {
            ECommerce.Core.Entities.PaymentStatus.Completed => "success",
            ECommerce.Core.Entities.PaymentStatus.Pending => "warning",
            ECommerce.Core.Entities.PaymentStatus.Failed => "danger",
            ECommerce.Core.Entities.PaymentStatus.Refunded => "info",
            _ => "secondary"
        };
    }
}
