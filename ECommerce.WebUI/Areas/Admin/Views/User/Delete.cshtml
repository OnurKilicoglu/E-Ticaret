@model UserDeleteViewModel
@{
    ViewData["Title"] = "Delete User";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index">Users</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Details" asp-route-id="@Model.Id">@Model.FullName</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="bi bi-trash text-danger"></i>
            Delete User
        </h2>
        <p class="text-muted">Permanently remove user from the system</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                <i class="bi bi-eye"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Users
            </a>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Deletion Eligibility Check -->
@if (!Model.CanBeDeleted)
{
    <div class="alert alert-warning" role="alert">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="bi bi-shield-exclamation fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h5 class="alert-heading">User Cannot Be Deleted</h5>
                <p class="mb-2">
                    This user cannot be deleted for the following reason:
                </p>
                <p class="mb-0">
                    <strong>@Model.DeletionReason</strong>
                </p>
            </div>
        </div>
    </div>
    
    <div class="text-center">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i>
            Return to User Details
        </a>
    </div>
}
else
{
    <!-- Impact Warning -->
    <div class="alert alert-danger" role="alert">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h5 class="alert-heading">Deletion Impact Warning</h5>
                <p class="mb-2">
                    Deleting this user will have the following impact:
                </p>
                <ul class="mb-0">
                    <li><strong>User Access:</strong> User will no longer be able to log in</li>
                    @if (Model.HasActivity)
                    {
                        <li><strong>Order History:</strong> All order history will be preserved but anonymized</li>
                    }
                    @if (Model.Dependencies.Any())
                    {
                        @foreach (var dependency in Model.Dependencies)
                        {
                            <li><strong>Data Impact:</strong> @dependency will be affected</li>
                        }
                    }
                    <li><strong>Audit Trail:</strong> Deletion will be logged for compliance</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- High Impact Warning -->
    @if (Model.IsHighImpactDeletion)
    {
        <div class="alert alert-warning" role="alert">
            <h6 class="alert-heading">
                <i class="bi bi-exclamation-triangle"></i>
                High Impact Deletion
            </h6>
            <p class="mb-0">
                This is a high-impact deletion because the user is 
                @(Model.Role == ECommerce.Core.Entities.UserRole.Admin ? "an Administrator" : "a high-value customer"). 
                Please ensure this action is necessary and authorized.
            </p>
        </div>
    }

    <!-- Main Content -->
    <div class="row">
        <!-- Deletion Form -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-trash"></i>
                        User Deletion Confirmation
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="UserName" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="FullName" type="hidden" />
                        <input asp-for="Role" type="hidden" />
                        <input asp-for="IsActive" type="hidden" />
                        <input asp-for="CreatedDate" type="hidden" />
                        <input asp-for="LastLoginDate" type="hidden" />
                        <input asp-for="OrderCount" type="hidden" />
                        <input asp-for="CommentCount" type="hidden" />
                        <input asp-for="TotalSpent" type="hidden" />
                        <input asp-for="CanBeDeleted" type="hidden" />
                        <input asp-for="CanBeHardDeleted" type="hidden" />
                        <input asp-for="DeletionReason" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- User Information Display -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="fw-bold">User Information</h6>
                                <dl class="row">
                                    <dt class="col-sm-5">Full Name:</dt>
                                    <dd class="col-sm-7"><strong>@Model.FullName</strong></dd>
                                    
                                    <dt class="col-sm-5">Username:</dt>
                                    <dd class="col-sm-7">@@@Model.UserName</dd>
                                    
                                    <dt class="col-sm-5">Email:</dt>
                                    <dd class="col-sm-7">@Model.Email</dd>
                                    
                                    <dt class="col-sm-5">Role:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-@Model.RoleCssClass">
                                            @Model.RoleDisplayName
                                        </span>
                                    </dd>
                                    
                                    <dt class="col-sm-5">Status:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold">Activity Summary</h6>
                                <dl class="row">
                                    <dt class="col-sm-5">Created:</dt>
                                    <dd class="col-sm-7">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                                    
                                    <dt class="col-sm-5">Last Login:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.LastLoginDate.HasValue)
                                        {
                                            @Model.LastLoginDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-5">Total Orders:</dt>
                                    <dd class="col-sm-7"><strong>@Model.OrderCount</strong></dd>
                                    
                                    <dt class="col-sm-5">Total Spent:</dt>
                                    <dd class="col-sm-7"><strong>@Model.TotalSpent.ToString("C")</strong></dd>
                                    
                                    @if (Model.CommentCount > 0)
                                    {
                                        <dt class="col-sm-5">Comments:</dt>
                                        <dd class="col-sm-7">@Model.CommentCount</dd>
                                    }
                                </dl>
                            </div>
                        </div>

                        <!-- Deletion Options -->
                        <h6 class="fw-bold mb-3">Deletion Options</h6>
                        
                        @if (Model.CanBeHardDeleted)
                        {
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="form-check">
                                        <input asp-for="HardDelete" class="form-check-input" type="checkbox" />
                                        <label asp-for="HardDelete" class="form-check-label">
                                            <strong>Permanent Deletion</strong> (Hard Delete)
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-exclamation-triangle text-warning"></i>
                                        <strong>Warning:</strong> This will permanently remove all user data and cannot be undone.
                                        If unchecked, user will be deactivated instead.
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                <strong>Soft Delete Only:</strong> This user has associated data and can only be deactivated, not permanently deleted.
                                The user account will be marked as inactive and login access will be revoked.
                            </div>
                        }

                        <!-- Deletion Reason -->
                        <div class="mb-4">
                            <label asp-for="Reason" class="form-label required">Reason for Deletion</label>
                            <textarea asp-for="Reason" class="form-control" rows="4" 
                                      placeholder="Please provide a detailed reason for deleting this user account..."></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                This reason will be logged for audit purposes and may be required for compliance.
                            </div>
                        </div>

                        <!-- Notification Options -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="SendNotification" class="form-check-input" type="checkbox" />
                                    <label asp-for="SendNotification" class="form-check-label">
                                        Send notification email to user
                                    </label>
                                </div>
                                <div class="form-text">
                                    User will receive an email about account deletion
                                </div>
                            </div>
                        </div>

                        <!-- Final Confirmation -->
                        <div class="alert alert-danger" role="alert">
                            <h6 class="alert-heading">
                                <i class="bi bi-exclamation-triangle"></i>
                                Final Confirmation Required
                            </h6>
                            <p class="mb-2">
                                Please review all information above carefully. This action may be irreversible.
                            </p>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmDeletion" required>
                                <label class="form-check-label" for="confirmDeletion">
                                    <strong>I understand the consequences and confirm the deletion of user "@Model.UserName"</strong>
                                </label>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg"></i>
                                    Do Not Delete
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-danger" id="deleteUserBtn" disabled>
                                    <i class="bi bi-trash"></i>
                                    Delete User
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Deletion Impact -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle text-warning"></i>
                        Deletion Impact
                    </h6>
                </div>
                <div class="card-body">
                    <div class="impact-summary">
                        <div class="impact-item @(Model.HasActivity ? "text-warning" : "text-success")">
                            <i class="bi bi-@(Model.HasActivity ? "exclamation-triangle" : "check-circle") me-2"></i>
                            <span>@(Model.HasActivity ? $"User has {Model.OrderCount} orders" : "No order history")</span>
                        </div>
                        
                        <div class="impact-item @(Model.CommentCount > 0 ? "text-warning" : "text-success")">
                            <i class="bi bi-@(Model.CommentCount > 0 ? "exclamation-triangle" : "check-circle") me-2"></i>
                            <span>@(Model.CommentCount > 0 ? $"User has {Model.CommentCount} comments" : "No comments")</span>
                        </div>
                        
                        <div class="impact-item @(Model.TotalSpent > 0 ? "text-warning" : "text-success")">
                            <i class="bi bi-@(Model.TotalSpent > 0 ? "exclamation-triangle" : "check-circle") me-2"></i>
                            <span>@(Model.TotalSpent > 0 ? $"Total spent: {Model.TotalSpent:C}" : "No purchases")</span>
                        </div>
                        
                        <div class="impact-item @(Model.Role == ECommerce.Core.Entities.UserRole.Admin ? "text-danger" : "text-info")">
                            <i class="bi bi-@(Model.Role == ECommerce.Core.Entities.UserRole.Admin ? "shield-exclamation" : "person") me-2"></i>
                            <span>@(Model.Role == ECommerce.Core.Entities.UserRole.Admin ? "Administrator account" : "Customer account")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alternative Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-lightbulb text-info"></i>
                        Alternative Actions
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-3">
                        Consider these alternatives before deleting:
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i>
                            Edit User Instead
                        </a>
                        
                        <button type="button" class="btn btn-outline-warning btn-sm" onclick="deactivateUser()">
                            <i class="bi bi-pause-circle"></i>
                            Deactivate Account
                        </button>
                        
                        <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#transferDataModal">
                            <i class="bi bi-arrow-right-circle"></i>
                            Transfer Data
                        </button>
                    </div>
                </div>
            </div>

            <!-- Compliance Information -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-shield-check text-success"></i>
                        Compliance & Legal
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <small>
                            <strong>Data Protection:</strong><br>
                            • Deletion will be logged for audit<br>
                            • Personal data will be anonymized<br>
                            • Order history preserved for records<br>
                            • Compliance with data protection laws
                        </small>
                    </div>
                    
                    <div class="user-summary">
                        <h6 class="small fw-bold">User: @Model.FullName</h6>
                        <small class="text-muted">
                            Account deletion requested for user with @Model.OrderCount order(s) and @Model.TotalSpent.ToString("C") total spending.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transfer Data Modal -->
    <div class="modal fade" id="transferDataModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Transfer User Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Before deleting this user, consider transferring their data:</p>
                    <ul>
                        <li>Export order history for records</li>
                        <li>Transfer comments to another account</li>
                        <li>Backup user preferences</li>
                        <li>Notify related departments</li>
                    </ul>
                    <div class="alert alert-warning">
                        <strong>User:</strong> @Model.FullName (@Model.UserName)<br>
                        <strong>Data:</strong> @Model.OrderCount orders, @Model.CommentCount comments
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-warning" onclick="exportUserData()">
                        <i class="bi bi-download"></i>
                        Export User Data
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on confirmation checkbox
            $('#confirmDeletion').on('change', function() {
                $('#deleteUserBtn').prop('disabled', !this.checked);
            });

            // Form submission with final confirmation
            $('form').on('submit', function(e) {
                if (!$('#confirmDeletion').is(':checked')) {
                    e.preventDefault();
                    alert('Please confirm that you understand the consequences.');
                    return false;
                }

                const reason = $('#Reason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    alert('Please provide a reason for deletion.');
                    $('#Reason').focus();
                    return false;
                }

                const isHardDelete = $('#HardDelete').is(':checked');
                const deleteType = isHardDelete ? 'permanently delete' : 'deactivate';
                
                const confirmMessage = `Are you absolutely sure you want to ${deleteType} user "@Model.UserName"?\n\n` +
                                     `This will:\n` +
                                     `• ${isHardDelete ? 'Permanently remove' : 'Deactivate'} the user account\n` +
                                     `• ${isHardDelete ? 'Delete' : 'Preserve'} user data\n` +
                                     `• Log the action for audit purposes\n` +
                                     @(Model.HasActivity ? "`• Affect order history and related data\\n`" : "") +
                                     `\nReason: ${reason}\n\n` +
                                     `${isHardDelete ? 'This action cannot be undone.' : 'User can be reactivated later.'}`;

                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
            });
        });

        function deactivateUser() {
            if (confirm('Deactivate this user account instead of deleting?')) {
                $.post('@Url.Action("ToggleStatus", "User")', {
                    userId: @Model.Id,
                    isActive: false
                })
                .done(function(response) {
                    if (response.success) {
                        alert('User account has been deactivated.');
                        window.location.href = '@Url.Action("Details", new { id = Model.Id })';
                    } else {
                        alert('Error: ' + response.message);
                    }
                })
                .fail(function() {
                    alert('Error deactivating user account');
                });
            }
        }

        function exportUserData() {
            // In a real implementation, this would trigger a data export
            alert('User data export functionality would be implemented here.\n\nThis would include:\n• Order history\n• User preferences\n• Activity logs\n• Associated data');
            $('#transferDataModal').modal('hide');
        }
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
        }
        
        .impact-summary {
            list-style: none;
            padding: 0;
        }
        
        .impact-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .user-summary {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #dee2e6;
        }
        
        .alert ul {
            margin-bottom: 0;
        }
    </style>
}
